{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "The Sendie document schema",
  "oneOf": [
    {
      "$ref": "#/definitions/item"
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/definitions/item"
      }
    }
  ],
  "definitions": {
    "item": {
      "description": "A Sendie Item",
      "type": "object",
      "properties": {
        "name": {
          "description": "A name for this Sendie Item",
          "type": "string"
        }
      },
      "required": ["name"],
      "allOf": [
        {
          "if": {
            "not": {
              "properties": {
                "address": { "type": "undefined" }
              }
            }
          },
          "then": {
            "$ref": "#/definitions/request"
          }
        },
        {
          "if": {
            "not": {
              "properties": {
                "children": { "type": "undefined" }
              }
            }
          },
          "then": {
            "$ref": "#/definitions/collection"
          }
        },
        {
          "if": {
            "not": {
              "properties": {
                "values": { "type": "undefined" }
              }
            }
          },
          "then": {
            "$ref": "#/definitions/context"
          }
        }
      ],
      "unevaluatedProperties": false
    },
    "request": {
      "description": "A Sendie Request",
      "type": "object",
      "properties": {
        "address": {
          "description": "The address to send this request",
          "type": "string"
        },
        "method": {
          "description": "The HTTP method to use",
          "type": "string",
          "enum": [
            "DELETE",
            "GET",
            "HEAD",
            "OPTIONS",
            "POST",
            "PUT",
            "delete",
            "get",
            "head",
            "options",
            "post",
            "put"
          ]
        },
        "headers": {
          "type": "object",
          "description": "HTTP headers to be sent along with this request",
          "properties": {},
          "additionalProperties": true
        },
        "body": {
          "description": "The request body",
          "type": ["string", "object"]
        }
      }
    },
    "collection": {
      "description": "A Sendie Collection",
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/item"
          }
        }
      }
    },
    "context": {
      "description": "A Sendie Context",
      "type": "object",
      "properties": {
        "values": {
          "type": "object"
        }
      }
    }
  }
}

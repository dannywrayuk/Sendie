{
  "name": "sendie",
  "displayName": "sendie",
  "description": "A VSCode Extension for sending network requests",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sendie.sendRequest",
        "title": "Send request",
        "icon": "$(run)"
      },
      {
        "command": "sendie.goToFile",
        "title": "Go to file",
        "icon": "$(go-to-file)"
      },
      {
        "command": "sendie.adoptContext",
        "title": "Adopt this context",
        "icon": "$(check)"
      },
      {
        "command": "sendie.openCurrentContext",
        "title": "Open the current context",
        "icon": "$(go-to-file)"
      },
      {
        "command": "sendie.refreshRequest",
        "title": "Refresh request list",
        "icon": "$(refresh)"
      },
      {
        "command": "sendie.refreshContext",
        "title": "Refresh context list",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sendie",
          "title": "Sendie",
          "icon": "$(mail)"
        }
      ]
    },
    "views": {
      "sendie": [
        {
          "id": "sendie-request",
          "name": "Requests"
        },
        {
          "id": "sendie-context",
          "name": "Context"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == sendie-request",
          "command": "sendie.refreshRequest",
          "group": "navigation"
        },
        {
          "when": "view == sendie-context",
          "command": "sendie.refreshContext",
          "group": "navigation"
        },
        {
          "when": "view == sendie-context",
          "command": "sendie.openCurrentContext",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceFilename =~ /.*\\.sendie\\.json$/",
          "command": "sendie.sendRequest",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sendie.sendRequest",
          "when": "view == sendie-request && viewItem != folder",
          "group": "inline"
        },
        {
          "command": "sendie.goToFile",
          "when": "view == sendie-request && viewItem != folder",
          "group": "inline"
        },
        {
          "command": "sendie.adoptContext",
          "when": "view == sendie-context && viewItem != folder",
          "group": "inline"
        }
      ]
    },
    "languages": [
      {
        "id": "yaml",
        "firstLine": "# Sendie"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.sendie.json",
        "url": "./sendieJsonSchema.json"
      },
      {
        "fileMatch": "*.sendie-context.json",
        "url": "./sendieJsonSchema.json"
      }
    ]
  },
  "scripts": {
    "build": "webpack",
    "dev": "webpack --watch",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:w": "jest --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.2",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "glob": "^8.0.3",
    "http-status-codes": "^2.2.0",
    "node-fetch": "^3.3.0",
    "yaml": "^2.2.1"
  }
}

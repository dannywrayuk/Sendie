{
  "name": "sendie",
  "displayName": "sendie",
  "description": "A VSCode Extension for sending network requests",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:requests",
    "onCommand:sendie.sendRequest"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sendie.sendRequest",
        "title": "Send Request",
        "icon": "$(extensions-refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "requests",
          "name": "Requests"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename =~ /.*\\.sendie\\.json$/",
          "command": "sendie.sendRequest",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sendie.sendRequest",
          "when": "view == requests && viewItem != folder",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "webpack",
    "dev": "webpack --watch",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:w": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  }
}
